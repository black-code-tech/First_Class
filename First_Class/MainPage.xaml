    <Grid RowDefinitions="*,2*,.5*,2*" ColumnDefinitions="*,*">

        <Image Source="img.jpg"
               Grid.Row="0" 
               Grid.Column="0" 
               Grid.ColumnSpan="2"
               BackgroundColor="DarkSeaGreen"/>

        <Editor Grid.Row="1"
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                Text="{Binding Text}"
                BackgroundColor="White"
                Placeholder="Provide your detils here..."/>

        <Button Grid.Row="2" 
                Grid.Column="0" 
                Text="Save"
                BackgroundColor="ForestGreen"
                TextColor="White"
                Command="{Binding SaveCommand}"/>

        <Button Grid.Row="2" 
                Grid.Column="1" 
                Text="Delete" BackgroundColor="Red"
                TextColor="White"
                Command="{Binding DeleteCommand}"/>

        <CollectionView ItemsSource="{Binding Applist}" 
                        Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2">

            <CollectionView.EmptyView>
                <Grid>
                    <Label Text="Empty Note..."
                           HorizontalOptions="CenterAndExpand"
                           VerticalOptions="CenterAndExpand"
                           FontSize="Large"/>
                </Grid>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                        <Frame Padding="5" HasShadow="True">
                        <StackLayout Orientation="Horizontal">

                            <Label Text=" >>> " 
                               TextColor="DodgerBlue"
                               FontSize="Body"/>
                            <Label Text="{Binding .}" 
                               TextColor="Black"
                               FontSize="Medium"/>
                        </StackLayout>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=SelectedCommand}"
                                    CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
